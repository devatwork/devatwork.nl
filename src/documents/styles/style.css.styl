/* Typography */
body
	font-family 'Lato', sans-serif

h1,
h2,
h3,
h4
	font-family 'Open Sans Condensed', sans-serif
	font-weight 700
	text-transform uppercase

h1
	border-bottom solid 2px

p
	line-height 1.6em

::-webkit-scrollbar
	width 12px
::-webkit-scrollbar-track
	background #e6
::-webkit-scrollbar-thumb
	background #ccc
::-webkit-scrollbar-thumb:window-inactive
	background #ccc

/* Layout */
html, body, .container
	height 100%
.container
	width 100%
	max-width 100%
	margin 0
	padding 0
	@media (min-width: 768px)
		width 100%
		max-width 100%
	@media (min-width: 992px)
		width 100%
		max-width 100%
	@media (min-width: 1200px)
		width 100%
		max-width 100%
.row
	margin 0
	&.top
		position static
		@media (min-width: 768px)
			position fixed
			width 100%
		.col-left,
		.col-right
			padding 0
	&.bottom
		height 100%
		@media (min-width: 768px)
			padding-top 50px
		& > div
			padding 0
			@media (min-width: 768px) and (max-width: 992px)
				height 100%
				overflow auto
				-webkit-overflow-scrolling touch
			@media (min-width: 992px)
				height 100%
				overflow auto
		.col-left
			section
				padding 15px
				@media (min-width: 992px)
					padding 30px 40px
				@media (min-width: 1200px)
					padding 30px 80px
		.col-right
			section
				@media (min-width: 992px)
					padding 15px

/* Header */
.top
	.brand
		background #333
		margin: 0
		padding 10px 30px
		a
			color #fff
			font-family 'Open Sans Condensed', sans-serif
			font-size 1.5em
			font-weight 700
			padding 10px 0
			text-transform uppercase
	nav
		border-bottom 1px solid #e6
		@media (min-width: 768px)
			border none
	.list-inline
		display table
		margin 0
		padding 0
		text-align center
		width 100%
		li
			display table-cell
			margin 0
			padding 0
			width 20%
			&.active
				background #f7
			a
				border-right 1px solid #e6
				color #333
				display block
				font-weight bold
				padding 15px 0
				text-transform uppercase
			&.social
				width auto
				a
					border-right none
					display inline
					font-size 24px
					padding 0 2px

/* Body */
.bottom
	.col-right
		background-color #f7

.list-group-item
	h5
		span
			color #80
			&:after
				content ', '
			&:last-child:after
				content ''

hgroup
	margin 0 0 10px 0
	h1
		margin 0 0 10px 0
	h2
		color #cc
		font-family 'Lato', sans-serif
		font-style italic
		font-size 24px
		font-weight normal
		margin 0 0 5px 0
		text-transform none
	h3
		font-family 'Lato', sans-serif
		font-size 14px
		font-weight normal
		margin 0 0 5px 0
		text-transform lowercase
		span
			color #80
			&:after
				content ', '
			&:last-child:after
				content ''

.navlinks
	.navlinks-prev,
	.navlinks-next
		display block
	@media (min-width: 1200px)
		.navlinks-prev
			float left
		.navlinks-next
			float right

.tags
	.tag
		color #80
		&:after
			content ', '
		&:last-child:after
			content ''